<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>

<div class="mult-link">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</div>