<h1>User info</h1>
<!-- user info -->


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


<h1>Book detail</h1>

<table>
  <tbody>
    <tr>画像・ユーザーリンク</tr>
    <tr><%= link_to @book.title, "/books/#{@book.id}" %> </tr>
    <tr><%= @book.body %></tr>
    <tr><%= link_to "Edit", root_path %></tr>
    <tr><%= link_to "Destroy", root_path, method: :delete %></tr>
  </tbody>
</table>