<h1>User info</h1>

<div>
  <%= image_tag current_user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <!-- 自分のユーザー編集ページへリンク -->
  <%= link_to "Edit User", edit_user_path(current_user.id) %>
</div>

<h1>New book</h1>

<%= form_with model: Book.new() do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <%= image_tag @book.user.get_profile_image(80, 80) %> <br />
      <%= link_to @book.user.name, user_path(@book.user) %>
    </tr>
    <tr><%= link_to @book.title, book_path(@book) %> </tr>
    <tr><%= @book.body %></tr>

    <% if @book.user == current_user %>
      <tr><%= link_to "Edit", edit_book_path(@book) %></tr>
    <% end %>

    <% if @book.user == current_user %>
      <tr><%= link_to "Destroy", book_path(@book), method: :delete %></tr>
    <% end %>
  </tbody>
</table>