<div class="col-md-3">
  <%= render 'user_info' , user: @user%>

  <%= render '/books/new_book', book: @book %>
</div>

<div class="col-md-8 offset-md-1">
  <h1>Books</h1>
  <table class="table">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(80, 80) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



