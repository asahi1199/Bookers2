<h1>User info</h1>

<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>

<h1>New book</h1>

<!-- New book -->

<h1>Books</h1>

<table>
   <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(80, 80) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
