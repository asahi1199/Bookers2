<h1>User info</h1>

<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <!-- 自分のユーザー編集ページへリンク -->
  <%= link_to "Edit User", edit_user_path(current_user.id) %>
</div>

<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Opinion</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<table>
   <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(80, 80) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
