<%= render 'user_info' %>

<div>
  <!-- 自分のユーザー編集ページへリンク -->
  <%= link_to "Edit User", edit_user_path(current_user.id) %>
</div>

<%= render '/books/new_book', book: @book %>

<h1>Books</h1>

<table>
   <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(80, 80) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</table>
