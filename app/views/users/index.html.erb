<%= render 'user_info' %>
<h1>User info</h1>

<div>
  <!-- 自分のユーザー編集ページへリンク -->
  <%= link_to "Edit User", edit_user_path(current_user.id) %>
</div>

<%= render '/books/new_book', book: @book %>

<h1>New book</h1>

<h1>Users</h1>

<table>
   <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(80, 80) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show", user_path(user) %></td>
    </tr>
  <% end %>
</tbody>
</table>